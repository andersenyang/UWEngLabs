<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <TextView
        android:id="@+id/tv_lv_LabName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LabName"
        android:textSize="20sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/tv_lv_LabLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lv_LabName"
        android:text="LabLocation"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="2dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        >

    </TextView>

    <TextView
        android:id="@+id/tv_lv_LabOccupancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LabOccupancy"
        android:textSize="20sp"
        android:layout_alignTop="@+id/tv_lv_LabName"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>